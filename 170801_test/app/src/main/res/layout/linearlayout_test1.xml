        android:layout_width="110dp"
        android:layout_height="100dp"
        android:text="버튼1"
        android:layout_gravity="center"
        android:gravity="right|top"
        android:background="#A3D97D" />

    <Button
        android:id="@+id/button6"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:text="버튼2"
        android:layout_gravity="left"
